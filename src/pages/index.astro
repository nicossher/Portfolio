import Projects from '../components/Projects.astro'
import Hero from '../components/Hero.astro';
import AboutMe from '../components/AboutMe.astro';
import ProfileCheck from '../icons/profileCheck.astro' 
import CodeIcon from '../icons/code.astro' 
---
<Layout 
title="Portfolio de Nicholas Sher - Desarrolador y Programador Web - Estudiante de Inegenieria en Sistemas."
description='Portfolio creado por Nicholas desarrollador web y estudiante de ingenieria en sistemas, donde encontraras toda su informacion importante junto a sus projectos que lo llevaron a aprender sus habilidades de programacion.	'
>
<main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      	<Hero>
      		</slot>
    	</Hero>
    </SectionContainer>
    <div class="space-y-24">

    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
      >
        <CodeIcon class="size-7" />
